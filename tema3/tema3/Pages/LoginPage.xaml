<Page x:Class="tema3.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tema3"
      xmlns:viewModels="clr-namespace:tema3.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="LoginPage"
      Background="White">
    <Page.DataContext>
        <viewModels:LoginViewModel/>
    </Page.DataContext>

    <Grid>
        <TextBlock Text="Login" FontSize="50" FontFamily="Bahnschrift" FontWeight="Bold" Margin="173,28,173,203" RenderTransformOrigin="0.5,0.5" />
         <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,10" Background="Aqua"/>
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="0,10" Background="Aqua"/>
            <Button Height="21" Width="64" 
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding RelativeSource = {RelativeSource AncestorType={x:Type Page}}}"/>
        </StackPanel>
    </Grid>
</Page>
